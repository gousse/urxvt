!geometrie et fonts
URxvt.geometry: 74x27
URxvt.font: xft:Monospace:size=11,xft:DejaVu Sans Mono for Powerline:size=11
!URxvt.font: xft:Source Code Pro for Powerline:size=11:antialias=true
URxvt.boldfont: xft:Monospace:size=11,xft:DejaVu Sans Mono for Powerline:size=11,antialias=true
URxvt*saveLines: 20000

Xft.antialias: true

!Barres de defilement
URxvt*scrollBar: true
URxvt*scrollBar_right: true
!URxvt*scrollColor: #c2dd5a
URxvt*scrollColor: chocolate3
URxvt*scrollBar_floating: true
URxvt*scrollstyle: plain

!extensions
URxvt.perl-lib: /usr/local/lib/urxvt/
URxvt.perl-ext-common: default,matcher,font-size,keyboard-select,selection-to-clipboard

!key binding
URxvt.keysym.M-u: matcher:select
URxvt.keysym.M-Escape: keyboard-select:activate
URxvt.keysym.C-KP_Add:     font-size:increase
URxvt.keysym.C-KP_Subtract:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show


!! matcher
URxvt.url-launcher:	firefox
URxvt.matcher.button:	1


!desactivate a default binding
URxvt.iso14755: false
URxvt.iso14755_52: false

!colors fore back
URxvt*foreground: darkgrey
URxvt*background: #000000

! black
URxvt*color0  : #424242
URxvt*color8  : #000000
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #1CB500
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #00F3FF
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC
